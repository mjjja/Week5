<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.kmj.week5.Fragment">

    <Button
        android:onClick="onClick"
        android:background="#FFFFFF"
        android:id="@+id/Apple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="사과 Table" />

    <Button
        android:onClick="onClick"
        android:background="#FFFFFF"
        android:id="@+id/Grape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="포도 Table" />

    <Button
        android:onClick="onClick"
        android:background="#FFFFFF"
        android:id="@+id/Kiwi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="키위 Table" />

    <Button
        android:onClick="onClick"
        android:background="#FFFFFF"
        android:id="@+id/Grapefruit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="자몽 table" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView4"
                android:textSize="20dp"
                android:textColor="#149fc2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="테이블명" />

            <TextView
                android:id="@+id/Tablename"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView6"
                android:textSize="20dp"
                android:textColor="#149fc2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="입장시간" />

            <TextView
                android:id="@+id/EntranceTime"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView8"
                android:textSize="20dp"
                android:textColor="#149fc2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="스파게티" />

            <TextView
                android:id="@+id/SpaghettiCount"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView10"
                android:textSize="20dp"
                android:textColor="#149fc2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="피자" />

            <TextView
                android:id="@+id/PizzaCount"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView14"
                android:textSize="20dp"
                android:textColor="#149fc2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="멤버쉽카드" />

            <TextView
                android:id="@+id/Membership"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView12"
                android:textSize="20dp"
                android:textColor="#149fc2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="가격" />

            <TextView
                android:id="@+id/TotalPrice"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:onClick="onClick"
            android:id="@+id/Order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="새 주문" />

        <Button
            android:onClick="onClick"
            android:id="@+id/Edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="정보수정" />

        <Button
            android:onClick="onClick"
            android:id="@+id/Init"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="초기화" />
    </LinearLayout>

</LinearLayout>
